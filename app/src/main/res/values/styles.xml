<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="notify_tv">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="me_menu_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--设置中心-->
    <style name="settings_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- 底部弹窗背景渐变动画 -->
    <style name="BottomPopBgStyle">
        <item name="android:windowEnterAnimation">@anim/gradient_not_transparent</item>
        <item name="android:windowExitAnimation">@anim/gradient_transparent</item>
    </style>

    <!-- 底部弹窗显示隐藏动画 -->
    <style name="BottomPopStyle">
        <item name="android:windowEnterAnimation">@anim/show_pop_bottom</item>
        <item name="android:windowExitAnimation">@anim/dismiss_pop_bottom</item>
    </style>
</resources>
